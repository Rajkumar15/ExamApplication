        <div class="col-md-12">
            <div class="panel panel-default mrg">
                <div class="panel-heading"><div class="widget-modal"><h4 class="widget-modal-title">Add <span>Student</span><button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button></h4></div></div>
                <div class="panel-body">
                    @using (Html.BeginForm("AddStudent", "SubjectGroup", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.pkid)
                        @Html.HiddenFor(x => x.user_fkid)
                        @Html.ValidationSummary()
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>Email</small></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-sm Rajstring", placeholder = "Enter Email Name" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>Mobile Number</small></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.mobileno, new { @class = "form-control input-sm Rajnumber", placeholder = "Enter Mobile Number" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>UserName</small></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control input-sm", placeholder = "Enter UserName" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>Password</small></label>
                                <div class="col-sm-9">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control input-sm", placeholder = "Enter Password", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>Student Name</small></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-sm Rajstring", placeholder = "Enter Student Name", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>Guardian phone</small></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.GuardianContact, new { @class = "form-control input-sm Rajnumber", placeholder = "Enter Guardian phone", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>ENV Number</small></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Enrollnmentno, new { @class = "form-control input-sm", placeholder = "Enter Enrolment Number", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>Upload Profile</small></label>
                                <div class="col-sm-9">
                                    <input type="file" name="ppic" id="ppic" multiple="multiple" class="form-control input-sm" />
                                </div>
                            </div>
                        </div>
                                                
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="group_name" class="col-sm-3 control-label"><small>Address</small></label>
                                <div class="col-sm-9">
                                    @Html.TextAreaFor(x => x.Address, new { @class = "form-control input-sm", placeholder = "Enter Address" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-left">
                            <div class="col-sm-offset-3 col-sm-10">
                                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Save</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
